@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Departman</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Personel Satışları</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Personelid</td>
            <td>@p.PersonelAd</td>
            <td>@p.PersonelSoyad</td>
            <td>@p.Departman.DepartmanAd</td>
            <td>@p.PersonelGorsel</td>

            <td><a href="/Personel/PersonelSil/@p.Personelid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@p.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@p.Personelid" class="btn btn-default" style="background-color:coral;color:white">Personel Satışları</a></td>
        </tr>
    }

</table>

<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

